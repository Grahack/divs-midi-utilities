<?xml version="1.0"?>

<!--
Wheatstone anglo concertina.

Home position is pointer fingers on Y and I; space switches from push to pull.
-->

<qwertymidi>

<map key="escape" action="exit" />
<map key="f1" action="stay-down-octave" />
<map key="f2" action="stay-up-octave" />
<map key="f3" action="stay-down-note" />
<map key="f4" action="stay-up-note" />
<map key="space" action="alt" />

<!-- Left hand -->

<map key="3" action="E3" alt-action="F3" />
<map key="4" action="A3" alt-action="Bb3" />
<map key="5" action="C#4" alt-action="D#4" />
<map key="6" action="A4" alt-action="G4" />
<map key="7" action="G#4" alt-action="Bb4" />

<map key="W" action="C3" alt-action="G3" />
<map key="E" action="G3" alt-action="B3" />
<map key="R" action="C4" alt-action="D4" />
<map key="T" action="E4" alt-action="F4" />
<map key="Y" action="G4" alt-action="A4" />

<map key="A" action="B3" alt-action="A3" />
<map key="S" action="D4" alt-action="F#4" />
<map key="D" action="G4" alt-action="A4" />
<map key="F" action="B4" alt-action="C5" />
<map key="G" action="D5" alt-action="E5" />

<!-- Right hand -->

<map key="8" action="C#5" alt-action="D#5" />
<map key="9" action="A5" alt-action="G5" />
<map key="0" action="G#5" alt-action="Bb5" />
<map key="minus" action="C#6" alt-action="D#6" />
<map key="equals" action="A6" alt-action="F6" />

<map key="I" action="C5" alt-action="B4" />
<map key="O" action="E5" alt-action="D5" />
<map key="P" action="G5" alt-action="F5" />
<map key="open-bracket" action="C6" alt-action="A5" />
<map key="close-bracket" action="E6" alt-action="B5" />

<map key="K" action="G5" alt-action="F#5" />
<map key="L" action="B5" alt-action="A5" />
<map key="semicolon" action="D6" alt-action="C6" />
<map key="single-quote" action="G6" alt-action="E6" />
<map key="enter" action="B6" alt-action="F#6" />

</qwertymidi>
