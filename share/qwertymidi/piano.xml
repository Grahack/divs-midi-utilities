<?xml version="1.0"?>

<!--
Conventional piano keyboard, like most tracker software.
-->

<qwertymidi>

<map key="escape" action="exit" />
<map key="f1" action="stay-down-octave" />
<map key="f2" action="stay-up-octave" />
<map key="f3" action="stay-down-note" />
<map key="f4" action="stay-up-note" />
<map key="space" action="shift-up-octave" />

<!-- Upper octave -->

<map key="tab" action="A3" />
<map key="1" action="A#3" />
<map key="Q" action="B3" />
<map key="W" action="C4" />
<map key="3" action="C#4" />
<map key="E" action="D4" />
<map key="4" action="D#4" />
<map key="R" action="E4" />
<map key="T" action="F4" />
<map key="6" action="F#4" />
<map key="Y" action="G4" />
<map key="7" action="G#4" />
<map key="U" action="A4" />
<map key="8" action="A#4" />
<map key="I" action="B4" />
<map key="O" action="C5" />
<map key="0" action="C#5" />
<map key="P" action="D5" />
<map key="minus" action="D#5" />
<map key="open-bracket" action="E5" />
<map key="close-bracket" action="F5" />
<map key="backspace" action="F#5" />
<map key="backslash" action="G5" />

<!-- Lower octave -->

<map key="Z" action="C3" />
<map key="S" action="C#3" />
<map key="X" action="D3" />
<map key="D" action="D#3" />
<map key="C" action="E3" />
<map key="V" action="F3" />
<map key="G" action="F#3" />
<map key="B" action="G3" />
<map key="H" action="G#3" />
<map key="N" action="A3" />
<map key="J" action="A#3" />
<map key="M" action="B3" />
<map key="comma" action="C4" />
<map key="L" action="C#4" />
<map key="period" action="D4" />
<map key="semicolon" action="D#4" />
<map key="slash" action="E4" />

</qwertymidi>
